<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
        <route url="/V1/invoices/:id/export/pdf" method="GET">
            <service class="PavelLeonidov\WebApiPdfInvoice\Api\PdfInvoiceRepositoryInterface"
                     method="getInvoiceForExportInPdfFormat"/>
            <resources>
                <resource ref="Magento_Sales::sales" />
            </resources>
        </route>
</routes>